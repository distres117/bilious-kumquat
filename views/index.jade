extends layout

block body
  div(ng-controller="SessionCtrl")
    span 
      a(href='/users/login', ng-show="!loggedIn") Login
    span |
    span
      a(href='', ng-show="loggedIn" ng-click="doLogOut()") Log out {{msg}}
    span
      a(href='/users/create' ng-show="!loggedIn") Register
  div
    h2 My Blog
    ul
      li
        a(href='/') Home
      li(ng-show="loggedIn")
        a(href='/posts/create') Add a new post
  div(ng-view)

  script(src='bower_components/angular/angular.js')
  script(src='bower_components/angular-cookies/angular-cookies.js')
  script(src='bower_components/angular-route/angular-route.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
